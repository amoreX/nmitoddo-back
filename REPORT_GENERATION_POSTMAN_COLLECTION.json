      "name": "Generate Daily Report",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer YOUR_TOKEN_HERE",
            "type": "text",
            "description": "Replace with actual JWT token from admin/manager user"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reportType\": \"daily\",\n  \"params\": {\n    \"dateFrom\": \"2024-01-01\",\n    \"dateTo\": \"2024-01-31\"\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/reports/generate",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "reports",
            "generate"
          ]
        },
        "description": "Generate a daily manufacturing report with custom date range. This will return a PDF file for download."
      }
